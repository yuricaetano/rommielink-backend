generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  nome String
  sobrenome String @default("Não informado")
  email String @unique
  senha String
  telefone String
  dataNascimento String
  dataCriacao DateTime @default(now()) //dataCadastro
  updatedAt DateTime @updatedAt
  estudante Estudante?
  anunciante Anunciante?
}

model Estudante {
  id String @id @default(uuid())
  tipoQuarto String
  valorMaximoAluguel Float
  periodoMaximoLocacao String
  periodoMinimoLocacao String
  fotoPerfil String
  sexo String
  instituicao String @default("")
  curso String @default("")
  cpf String @unique
  rg String @unique
  cidade String?
  userId String @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  preferencias Preferencias[]

}

enum TipoConvivencia {
  Independente
  Moderada
  Compartilhada
}

model Preferencias {
  id String @id @default(uuid())
  genero_moradores String
  orientacao_sexual_moradores String
  numero_moradores Int
  fumante Boolean
  possuiAnimal Boolean
  tipoAnimal String?
  idade_minima Int
  idade_maxima Int
  religioso Boolean
  religiao String?
  tipoConvivencia TipoConvivencia
  maiorQualidade  String?
  piorDefeito String?
  principalFatorMoradia String?
  // proximidades Proximidades[]
  estudanteId String
  estudante Estudante @relation(fields: [estudanteId], references: [id], onDelete: Cascade)
}

model Anunciante {
  id String @id @default(uuid())
  userId String @unique
  fotoPerfil String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  imovel Imovel[]
  @@map("anunciante") // Mapeia para a tabela com nome em minúsculo
}

enum TipoMoradia {
  Casa
  Apartamento
  Kitnet
  Republica
}

enum TipoQuarto {
  QuartoIndividual
  QuartoCompartilhado
  EspacoInteiro
}

enum SexoMorador {
  Masculino
  Feminino
  Mistas
}

enum TipoAnunciante {
  CompanheiroQuarto
  Proprietario
  Imobiliaria
}

enum RestricaoGenero {
  Masculino
  Feminino
  NaoImporta
}

model Imovel {
  id String @id @default(uuid())
  tipoQuarto TipoQuarto
  status String
  valorAluguel Float
  dataCriacao DateTime @default(now())
  periodoMaximoLocacao String
  periodoMinimoLocacao String
  descricao String
  fotoImovel String
  wifi Boolean
  arCondicionado Boolean
  manutencao Boolean
  aceitaVisita Boolean
  aceitaFumante Boolean
  acetaAnimal Boolean
  tipoMoradia TipoMoradia
  sexoMorador SexoMorador
  possuiMoradores Boolean @default(false)
  tipoAnunciante TipoAnunciante
  moraNaPropriedade Boolean? // Se for proprietário, pode indicar se mora ou não
  restricaoGenero RestricaoGenero
  anuncianteId String
  anunciante Anunciante @relation(fields: [anuncianteId], references: [id], onDelete: Cascade)
  proximidades Proximidades[]
  endereco Endereco[]
  moradores Morador[]
}

model Morador {
  id String @id @default(uuid())
  idadeMinima Int
  idadeMaxima Int
  genero SexoMorador
  curso String
  instituicao String
  idiomas String[]
  imovelId String
  imovel Imovel @relation(fields: [imovelId], references: [id], onDelete: Cascade)
}

model Proximidades {
  id String @id @default(uuid())
  universidade Boolean
  academia Boolean
  hospital Boolean
  farmacia Boolean
  mercado Boolean
  shopping Boolean
  postoGasolina Boolean
  agenciaBancaria Boolean
  pontoOnibus Boolean
  estacaoMetro Boolean
  imovelId String? @unique
  Policiamento Boolean
  Lazer_Cultura Boolean
  Areas_Verdes Boolean
  preferenciaId String
  imovel Imovel? @relation(fields: [imovelId], references: [id], onDelete: Cascade)
  // preferencia Preferencias @relation(fields: [preferenciaId], references: [id], onDelete: Cascade)
}

model Endereco{
  id String @id @default(uuid())
  cep String
  logradouro String
  numero String
  complemento String
  bairro String
  cidade String
  estado String
  pais String
  imovelId String @unique
  imovel Imovel @relation(fields: [imovelId], references: [id], onDelete: Cascade)
}